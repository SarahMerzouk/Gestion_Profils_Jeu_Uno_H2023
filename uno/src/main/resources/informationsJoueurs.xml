<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import uno.frontal.controles.CanvasInformations?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>


<VBox xmlns:fx="http://javafx.com/fxml"
    fx:controller="uno.frontal.vues.VueInformationsUnJoueur" 
    styleClass="conteneur"
    id="vue-informations">        

    <VBox>
    	<HBox styleClass="conteneurModification" VBox.vgrow="ALWAYS">
	    	<VBox HBox.hgrow="ALWAYS">
	    		
	    		<Pane VBox.vgrow="ALWAYS" minHeight="10" minWidth="130"/>   
	       		
	       		<Label VBox.vgrow="ALWAYS" text="%texteId" styleClass="labelsAttributsProfil"></Label>
	       		
	       		<Pane VBox.vgrow="ALWAYS" minHeight="10" minWidth="130"/>   
	       		
	       		<Label VBox.vgrow="ALWAYS" text="%texteNom" styleClass="labelsAttributsProfil"></Label>
	       		
	       		<Pane VBox.vgrow="ALWAYS" minHeight="10" minWidth="130"/>   
	       		
	       		<Label VBox.vgrow="ALWAYS" text="%textePseudo" styleClass="labelsAttributsProfil"></Label>
	       	</VBox>
	       	
	       	<Pane HBox.hgrow="ALWAYS" minHeight="15" minWidth="130"/>   
	       	
	       	<VBox HBox.hgrow="ALWAYS">
	       		<Pane VBox.vgrow="ALWAYS" minHeight="10" minWidth="130"/>   
	       		
	       		<TextField VBox.vgrow="ALWAYS" fx:id="textFieldId"></TextField>
	       		
	       		<Pane VBox.vgrow="ALWAYS" minHeight="10" minWidth="130"/>   
	       		
	       		<TextField VBox.vgrow="ALWAYS" fx:id="textFieldNom"></TextField>
	       		
	       		<Pane VBox.vgrow="ALWAYS" minHeight="10" minWidth="130"/>   
	       		
	       		<TextField VBox.vgrow="ALWAYS" fx:id="textFieldPseudo"></TextField>
	       	</VBox>
	       	
		</HBox>
	</VBox>

	<CanvasInformations 
            VBox.vgrow="ALWAYS" 
            fx:id="canvasInformations" 
            id="canvas-informations">
	</CanvasInformations>

	
    <Button
    	fx:id="boutonQuitterPageInfos" 
    	VBox.vgrow="ALWAYS"
        text="%retourPageProfil"
        styleClass="gros-bouton"
        id="button">
    </Button>
    
</VBox>
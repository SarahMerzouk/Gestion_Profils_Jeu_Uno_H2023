<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import uno.frontal.controles.CanvasInformations?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>


<VBox xmlns:fx="http://javafx.com/fxml"
    fx:controller="uno.frontal.vues.VueInformationsUnJoueur" 
    styleClass="conteneur"
    id="vue-informations">        

    <VBox>
    	<HBox styleClass="conteneurModification">
	    	<VBox>
	    		
	    		<Pane minHeight="10" minWidth="130"/>   
	       		
	       		<Label text="%texteId" styleClass="labelsAttributsProfil"></Label>
	       		
	       		<Pane minHeight="10" minWidth="130"/>   
	       		
	       		<Label text="%texteNom" styleClass="labelsAttributsProfil"></Label>
	       		
	       		<Pane minHeight="10" minWidth="130"/>   
	       		
	       		<Label text="%textePseudo" styleClass="labelsAttributsProfil"></Label>
	       	</VBox>
	       	
	       	<Pane minHeight="15" minWidth="130"/>   
	       	
	       	<VBox>
	       		<Pane minHeight="10" minWidth="130"/>   
	       		
	       		<TextField fx:id="textFieldId"></TextField>
	       		
	       		<Pane minHeight="10" minWidth="130"/>   
	       		
	       		<TextField fx:id="textFieldNom"></TextField>
	       		
	       		<Pane minHeight="10" minWidth="130"/>   
	       		
	       		<TextField fx:id="textFieldPseudo"></TextField>
	       	</VBox>
	       	
		</HBox>
	</VBox>

	<CanvasInformations 
            VBox.vgrow="ALWAYS" 
            fx:id="canvasInformations" 
            id="canvas-informations">
	</CanvasInformations>

	
    <Button
    	fx:id="boutonQuitterPageInfos" 
    	VBox.vgrow="ALWAYS"
        text="%retourPageProfil"
        styleClass="gros-bouton"
        id="button">
    </Button>
    
    <Button
			fx:id="boutonModifier"
			HBox.hgrow="ALWAYS"
			text="%bouton_modier"
			styleClass="gros-bouton" 
			id="button">
	</Button>
    
</VBox>
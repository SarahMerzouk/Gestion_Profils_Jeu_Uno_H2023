<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import uno.frontal.controles.CanvasInformations?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>

<VBox xmlns:fx="http://javafx.com/fxml"
    fx:controller="uno.frontal.vues.VueInformationsUnJoueur" 
    styleClass="conteneur"
    id="vue-informations">
	
	<Pane styleClass="petit-espace-vertical"/>
	
	<HBox VBox.vgrow="ALWAYS" styleClass="conteneur">

        <Pane styleClass="petit-espace-horizontal"/>

        <CanvasInformations 
            HBox.hgrow="ALWAYS" 
            fx:id="canvasInformations" 
            id="canvas-informations">
        </CanvasInformations>

        <Pane styleClass="petit-espace-horizontal"/>

    </HBox>

    <Pane styleClass="petit-espace-vertical"/>
	
    <Button
    	fx:id="boutonQuitterPageInfos" 
        text="%retourPageProfil"
        styleClass="gros-bouton"
        id="button">
    </Button>
    
    <Pane styleClass="petit-espace-vertical"/>

</VBox>
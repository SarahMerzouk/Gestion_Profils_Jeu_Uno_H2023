<VBox xmlns:fx="http://javafx.com/fxml"
    fx:controller="uno.frontal.vues.VueInformationsUnJoueur" 
    styleClass="conteneur"
    id="vue-informations">        

    <VBox styleClass="conteneurModification">
       <HBox styleClass="conteneurLabelsTextesModificatations">
        	<Label text="%texteId" id="labelsAttributsProfil"></Label>
        </HBox>
        	
        <HBox styleClass="conteneurLabelsTextesModificatations">
        	<Label text="%texteNom" id="labelsAttributsProfil"></Label>
        </HBox>
        	
       	<HBox styleClass="conteneurLabelsTextesModificatations">
        	<Label text="%textePseudo" id="labelsAttributsProfil"></Label>
        </HBox>
	</VBox>

	<CanvasInformations 
            VBox.vgrow="ALWAYS" 
            fx:id="canvasInformations" 
            id="canvas-informations">
	</CanvasInformations>

	
    <Button
    	fx:id="boutonQuitterPageInfos" 
        text="%retourPageProfil"
        styleClass="gros-bouton"
        id="button">
    </Button>
    
</VBox>
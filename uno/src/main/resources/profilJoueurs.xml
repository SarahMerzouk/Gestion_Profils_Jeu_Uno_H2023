<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.Label?>

<VBox xmlns:fx="http://javafx.com/fxml"
    fx:controller="uno.frontal.vues.VueProfilDesJoueurs" 
    styleClass="conteneur"
    id="vue-profil-des-joueurs">

	<Label 
		text="%textePage"
		id="texte" >
	</Label>
	
	<ImageView id="logo">     
        <image>
            <Image url="@logoProfil.jpg"/>
        </image>
    </ImageView>
    
    <Button 
        text="%button_ajouter"
        styleClass="gros-bouton"
        id="button-ajouterUser">
    </Button>
    
     <Button 
        text="%button_supprimer"
        styleClass="gros-bouton"
        id="button-supprimerUser">
    </Button>
    
    <Button 
        text="%button_voirInfos"
        styleClass="gros-bouton"
        id="button-voirInfos">
    </Button>
    
    <Button
    	fx:id="boutonRetourVersAcceuil" 
        text="%button_retour"
        styleClass="gros-bouton"
        id="button-retourAcceuil">
    </Button>
    
    <!-- La liste des joueurs -->
    <Label
     text="%textePresentationListe" 
     id="texte-presentation-liste">
    </Label>
    
    <Label 
	    fx:id="labelUnJoueur"
	    id="label-un-joueur"
	    text="labelUnJoueur">
	</Label>

</VBox>
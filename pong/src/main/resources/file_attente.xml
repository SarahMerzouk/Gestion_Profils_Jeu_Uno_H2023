<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.Label?>

<VBox xmlns:fx="http://javafx.com/fxml"
    fx:controller="pong.frontal.vues.VueFileAttente" 
    styleClass="conteneur"
    id="vue-file-attente">

    <ImageView>     
        <image>
            <Image url="@logo.png" />
        </image>
    </ImageView>

    <Button
    	fx:id="boutonJoindrePartie" 
        text="%joindrePartie"
        styleClass="gros-bouton"
        id="bouton-joindre-partie">
    </Button>
    
    <Label text="%lesRendezVous" styleClass="moyen-texte"/>
    
    <Label 
    fx:id="labelRendezVous"
    styleClass="petit-texte"
    id="label-message"
    text="[labelRendezVous]">
</Label>

</VBox>